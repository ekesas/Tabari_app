<h1>New Post</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %> <br/>
		<%= f.text_field :title %> <br/>
	</p>	

	<p>
		<%= f.label :body %> <br/>
		<%= f.text_area :body %> <br/>
	</p>

	<p>
		<%= f.submit "Add Post" %>

	</p>

	<% end %>
